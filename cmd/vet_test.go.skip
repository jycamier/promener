package cmd

import (
	"bytes"
	"testing"

	"github.com/jycamier/promener/internal/domain"
	"github.com/jycamier/promener/internal/validator"
	"github.com/jycamier/promener/internal/validator/mocks"
	"go.uber.org/mock/gomock"
)

func TestVetCommand(t *testing.T) {
	tests := []struct {
		name           string
		args           []string
		mockSetup      func(*mocks.MockSpecValidator, *mocks.MockValidationFormatter)
		expectedOutput string
		wantErr        bool
	}{
		{
			name: "valid CUE file with text format",
			args: []string{"testdata/test.cue"},
			mockSetup: func(mv *mocks.MockSpecValidator, mf *mocks.MockValidationFormatter) {
				spec := &domain.Specification{
					Info: domain.Info{Title: "Test", Version: "1.0.0"},
				}
				result := &validator.ValidationResult{
					Valid:     true,
					CueErrors: []validator.ValidationError{},
				}
				mv.EXPECT().
					ValidateAndExtract("testdata/test.cue").
					Return(spec, result, nil).
					Times(1)

				mf.EXPECT().
					Format(result).
					Return("✓ Validation successful\n", nil).
					Times(1)
			},
			expectedOutput: "✓ Validation successful\n",
			wantErr:        false,
		},
		{
			name: "invalid CUE file with validation errors",
			args: []string{"testdata/invalid.cue"},
			mockSetup: func(mv *mocks.MockSpecValidator, mf *mocks.MockValidationFormatter) {
				result := &validator.ValidationResult{
					Valid:     false,
					CueErrors: []validator.ValidationError{
						{
							Path:    "services.default.metrics.test_metric",
							Message: "missing required field 'type'",
							Line:    10,
						},
					},
				}
				mv.EXPECT().
					ValidateAndExtract("testdata/invalid.cue").
					Return(nil, result, nil).
					Times(1)

				mf.EXPECT().
					Format(result).
					Return("✗ Validation failed\n  services.default.metrics.test_metric: missing required field 'type' (line 10)\n", nil).
					Times(1)
			},
			expectedOutput: "",
			wantErr:        true,
		},
		{
			name: "valid CUE file with JSON format",
			args: []string{"--format", "json", "testdata/test.cue"},
			mockSetup: func(mv *mocks.MockSpecValidator, mf *mocks.MockValidationFormatter) {
				spec := &domain.Specification{
					Info: domain.Info{Title: "Test", Version: "1.0.0"},
				}
				result := &validator.ValidationResult{
					Valid:     true,
					CueErrors: []validator.ValidationError{},
				}
				mv.EXPECT().
					ValidateAndExtract("testdata/test.cue").
					Return(spec, result, nil).
					Times(1)

				mf.EXPECT().
					Format(result).
					Return(`{"valid":true,"errors":[]}`, nil).
					Times(1)
			},
			expectedOutput: `{"valid":true,"errors":[]}`,
			wantErr:        false,
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			ctrl := gomock.NewController(t)
			defer ctrl.Finish()

			mockValidator := mocks.NewMockSpecValidator(ctrl)
			mockFormatter := mocks.NewMockValidationFormatter(ctrl)

			if tt.mockSetup != nil {
				tt.mockSetup(mockValidator, mockFormatter)
			}

			// Capture output
			var buf bytes.Buffer
			vetCmd.SetOut(&buf)
			vetCmd.SetErr(&buf)
			vetCmd.SetArgs(tt.args)

			// Execute command
			err := vetCmd.Execute()

			// Check error
			if (err != nil) != tt.wantErr {
				t.Errorf("vetCmd.Execute() error = %v, wantErr %v", err, tt.wantErr)
			}

			// Check output if specified
			if tt.expectedOutput != "" {
				output := buf.String()
				if output != tt.expectedOutput {
					t.Errorf("vetCmd output = %q, want %q", output, tt.expectedOutput)
				}
			}
		})
	}
}
